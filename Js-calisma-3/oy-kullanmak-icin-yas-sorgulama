<script>
function myFunction() {
    var yas, voteable;
    yas = document.getElementById("yas").value;
    voteable = (yas < 18) ? "cok genc":"yasi tutuyor";
    document.getElementById("demo").innerHTML = voteable + " Oy kullanmak icin.";
}
